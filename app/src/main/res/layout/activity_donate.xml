<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F0FCFC"
    android:id="@+id/donate_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/ranking_top"
            tools:context=".DonateActivity">

            <ImageView
                android:id="@+id/menu_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:onClick="OnClick"
                android:src="@drawable/menu"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView"
                app:layout_constraintTop_toTopOf="parent"></ImageView>

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="160dp"
                android:layout_marginRight="100dp"
                android:fontFamily="@font/maplestory"
                android:text="기부 하기"
                android:textColor="#000000"
                android:textSize="25dp"
                app:layout_constraintEnd_toStartOf="@+id/menu_button"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
            </TextView>
        </android.support.constraint.ConstraintLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:layout_marginTop="50dp">

            <ImageView
                android:id="@+id/donate_image1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/wwf">
            </ImageView>

            <TextView
                android:id="@+id/donate_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/donate_image1"
                android:layout_toRightOf="@+id/donate_image1"
                android:layout_marginLeft="10dp"
                android:textSize="25dp"
                android:fontFamily="@font/maplestory"
                android:textStyle="bold"
                android:textColor="#000000"
                android:text="세계 자연 기금">
            </TextView>

            <TextView
                android:id="@+id/donate_point1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/donate_name1"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/donate_image1"
                android:fontFamily="@font/maplestory"
                android:text="필요 포인트"
                android:textColor="#000000"
                android:textSize="20dp"></TextView>

            <TextView
                android:id="@+id/donate_price1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/donate_name1"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/donate_point1"
                android:fontFamily="@font/maplestory"
                android:text="300"
                android:textColor="#000000"
                android:textSize="20dp">
            </TextView>

            <Button
                android:id="@+id/donate_button1"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="190dp"
                android:background="#AEDDEF"
                android:layout_toRightOf="@id/donate_image1"
                android:fontFamily="@font/maplestory"
                android:textColor="#000000"
                android:textSize="20dp"
                android:text="기부 하기"
                android:onClick="DonateClick1">

            </Button>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/donate_image2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/greenpeace">
            </ImageView>

            <TextView
                android:id="@+id/donate_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/donate_image2"
                android:layout_toRightOf="@+id/donate_image2"
                android:layout_marginLeft="10dp"
                android:textSize="25dp"
                android:fontFamily="@font/maplestory"
                android:textStyle="bold"
                android:textColor="#000000"
                android:text="그린피스">
            </TextView>

            <TextView
                android:id="@+id/donate_point2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/donate_name2"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/donate_image2"
                android:fontFamily="@font/maplestory"
                android:text="필요 포인트"
                android:textColor="#000000"
                android:textSize="20dp"></TextView>

            <TextView
                android:id="@+id/donate_price2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/donate_name2"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/donate_point2"
                android:fontFamily="@font/maplestory"
                android:text="300"
                android:textColor="#000000"
                android:textSize="20dp">
            </TextView>

            <Button
                android:id="@+id/donate_button2"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="190dp"
                android:background="#AEDDEF"
                android:layout_toRightOf="@id/donate_image2"
                android:fontFamily="@font/maplestory"
                android:textColor="#000000"
                android:textSize="20dp"
                android:text="기부 하기"
                android:onClick="DonateClick2">

            </Button>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/donate_image3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/friendsofearth">
            </ImageView>

            <TextView
                android:id="@+id/donate_name3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/donate_image3"
                android:layout_toRightOf="@+id/donate_image3"
                android:layout_marginLeft="10dp"
                android:textSize="25dp"
                android:fontFamily="@font/maplestory"
                android:textStyle="bold"
                android:textColor="#000000"
                android:text="지구의 벗">
            </TextView>

            <TextView
                android:id="@+id/donate_point3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/donate_name3"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/donate_image3"
                android:fontFamily="@font/maplestory"
                android:text="필요 포인트"
                android:textColor="#000000"
                android:textSize="20dp"></TextView>

            <TextView
                android:id="@+id/donate_price3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/donate_name3"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/donate_point3"
                android:fontFamily="@font/maplestory"
                android:text="300"
                android:textColor="#000000"
                android:textSize="20dp">
            </TextView>

            <Button
                android:id="@+id/donate_button3"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="190dp"
                android:background="#AEDDEF"
                android:layout_toRightOf="@id/donate_image3"
                android:fontFamily="@font/maplestory"
                android:textColor="#000000"
                android:textSize="20dp"
                android:text="기부 하기"
                android:onClick="DonateClick3">

            </Button>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/maplestory"
                android:textColor="#000000"
                android:textSize="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:text="보유 포인트 : ">
            </TextView>

            <TextView
                android:id="@+id/currentpoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/maplestory"
                android:textColor="#000000"
                android:textSize="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="5dp"
                android:text="10000">
            </TextView>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/maplestory"
            android:textColor="#000000"
            android:textSize="18dp"
            android:layout_marginTop="60dp"
            android:text="기부를 통해 특별한 배지를 획득하세요!">
        </TextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/badge01">
            </ImageView>

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/badge02">
            </ImageView>

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/badge03">
            </ImageView>

        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/navigation_drawer" />

</android.support.v4.widget.DrawerLayout>