<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F0FCFC"
    android:id="@+id/shop_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/donate_top"
            tools:context=".DonateActivity">

            <ImageView
                android:id="@+id/menu_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:onClick="OnClick"
                android:src="@drawable/menu"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView"
                app:layout_constraintTop_toTopOf="parent"></ImageView>

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="190dp"
                android:layout_marginRight="108dp"
                android:fontFamily="@font/maplestory"
                android:text="상점"
                android:textColor="#000000"
                android:textSize="25dp"
                app:layout_constraintEnd_toStartOf="@+id/menu_button"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
            </TextView>
        </android.support.constraint.ConstraintLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:layout_marginTop="50dp">

            <ImageView
                android:id="@+id/shop_image1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/apple">
            </ImageView>

            <TextView
                android:id="@+id/shop_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/shop_image1"
                android:layout_toRightOf="@+id/shop_image1"
                android:layout_marginLeft="10dp"
                android:textSize="25dp"
                android:fontFamily="@font/maplestory"
                android:textStyle="bold"
                android:textColor="#000000"
                android:text="apple">
            </TextView>

            <TextView
                android:id="@+id/shop_point1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/shop_name1"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/shop_image1"
                android:fontFamily="@font/maplestory"
                android:text="필요 포인트"
                android:textColor="#000000"
                android:textSize="20dp"></TextView>

            <TextView
                android:id="@+id/shop_price1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/shop_name1"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/shop_point1"
                android:fontFamily="@font/maplestory"
                android:text="0"
                android:textColor="#000000"
                android:textSize="20dp">
            </TextView>

            <Button
                android:id="@+id/shop_button1"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_marginLeft="190dp"
                android:layout_marginTop="30dp"
                android:layout_toRightOf="@id/shop_image1"
                android:background="#AEDDEF"
                android:fontFamily="@font/maplestory"
                android:onClick="ShopClick"
                android:text="구매 하기"
                android:textColor="#000000"
                android:textSize="20dp">

            </Button>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/shop_image2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/fish">
            </ImageView>

            <TextView
                android:id="@+id/shop_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/shop_image2"
                android:layout_toRightOf="@+id/shop_image2"
                android:layout_marginLeft="10dp"
                android:textSize="25dp"
                android:fontFamily="@font/maplestory"
                android:textStyle="bold"
                android:textColor="#000000"
                android:text="fish">
            </TextView>

            <TextView
                android:id="@+id/shop_point2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/shop_name2"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/shop_image2"
                android:fontFamily="@font/maplestory"
                android:text="필요 포인트"
                android:textColor="#000000"
                android:textSize="20dp"></TextView>

            <TextView
                android:id="@+id/shop_price2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/shop_name2"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/shop_point2"
                android:fontFamily="@font/maplestory"
                android:text="0"
                android:textColor="#000000"
                android:textSize="20dp">
            </TextView>

            <Button
                android:id="@+id/shop_button2"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="190dp"
                android:background="#AEDDEF"
                android:layout_toRightOf="@id/shop_image2"
                android:fontFamily="@font/maplestory"
                android:textColor="#000000"
                android:textSize="20dp"
                android:text="구매 하기"
                android:onClick="ShopClick">

            </Button>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/shop_image3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/meat">
            </ImageView>

            <TextView
                android:id="@+id/shop_name3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/shop_image3"
                android:layout_toRightOf="@+id/shop_image3"
                android:layout_marginLeft="10dp"
                android:textSize="25dp"
                android:fontFamily="@font/maplestory"
                android:textStyle="bold"
                android:textColor="#000000"
                android:text="meat">
            </TextView>

            <TextView
                android:id="@+id/shop_point3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/shop_name3"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/shop_image3"
                android:fontFamily="@font/maplestory"
                android:text="필요 포인트"
                android:textColor="#000000"
                android:textSize="20dp"></TextView>

            <TextView
                android:id="@+id/shop_price3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/shop_name3"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/shop_point3"
                android:fontFamily="@font/maplestory"
                android:text="0"
                android:textColor="#000000"
                android:textSize="20dp">
            </TextView>

            <Button
                android:id="@+id/shop_button3"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_marginLeft="190dp"
                android:layout_marginTop="30dp"
                android:layout_toRightOf="@id/shop_image3"
                android:background="#AEDDEF"
                android:fontFamily="@font/maplestory"
                android:onClick="ShopClick"
                android:text="구매 하기"
                android:textColor="#000000"
                android:textSize="20dp">

            </Button>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/shop_image4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/ice">
            </ImageView>

            <TextView
                android:id="@+id/shop_name4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/shop_image4"
                android:layout_toRightOf="@+id/shop_image4"
                android:layout_marginLeft="10dp"
                android:textSize="25dp"
                android:fontFamily="@font/maplestory"
                android:textStyle="bold"
                android:textColor="#000000"
                android:text="iceblock">
            </TextView>

            <TextView
                android:id="@+id/shop_point4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/shop_name4"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/shop_image4"
                android:fontFamily="@font/maplestory"
                android:text="필요 포인트"
                android:textColor="#000000"
                android:textSize="20dp"></TextView>

            <TextView
                android:id="@+id/shop_price4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/shop_name4"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/shop_point4"
                android:fontFamily="@font/maplestory"
                android:text="0"
                android:textColor="#000000"
                android:textSize="20dp">
            </TextView>

            <Button
                android:id="@+id/shop_button4"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="190dp"
                android:background="#AEDDEF"
                android:layout_toRightOf="@id/shop_image4"
                android:fontFamily="@font/maplestory"
                android:textColor="#000000"
                android:textSize="20dp"
                android:text="구매 하기"
                android:onClick="ShopClick">

            </Button>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/maplestory"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:text="보유 포인트 : ">
        </TextView>

        <TextView
            android:id="@+id/currentpoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/maplestory"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="5dp"
            android:text="10000">
        </TextView>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/maplestory"
            android:textColor="#000000"
            android:textSize="18dp"
            android:layout_marginTop="40dp"
            android:text="사용한 포인트 만큼 북극곰의 경험치로 전환됩니다.">
        </TextView>

    </LinearLayout>

    <include layout="@layout/navigation_drawer" />

</android.support.v4.widget.DrawerLayout>
