<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="#F0FCFC">

    <ImageView
        android:id="@+id/donate_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/polarbear">
    </ImageView>

    <TextView
        android:id="@+id/donate_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/donate_image"
        android:layout_toRightOf="@+id/donate_image"
        android:layout_marginLeft="10dp"
        android:textSize="25dp"
        android:fontFamily="@font/maplestory"
        android:textStyle="bold"
        android:textColor="#000000"
        android:text="북극곰 보전 단체">
    </TextView>

    <TextView
        android:id="@+id/donate_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/donate_name"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/donate_image"
        android:fontFamily="@font/maplestory"
        android:text="필요 포인트"
        android:textColor="#000000"
        android:textSize="20dp"></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/donate_name"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/donate_point"
        android:fontFamily="@font/maplestory"
        android:text="150"
        android:textColor="#000000"
        android:textSize="20dp">
    </TextView>

    <Button
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:background="#AEDDEF"
        android:layout_toRightOf="@id/donate_name"
        android:fontFamily="@font/maplestory"
        android:textColor="#000000"
        android:textSize="20dp"
        android:text="기부 하기">

    </Button>
</RelativeLayout>