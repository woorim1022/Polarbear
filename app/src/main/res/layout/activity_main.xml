<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_main"
    android:id="@+id/drawer_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <ImageView
            android:id="@+id/menu_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/menu"
            android:onClick="OnClick">
        </ImageView>

        <TextView
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:paddingLeft="10dp"
            android:text="TextView"
            android:fontFamily="@font/maplestory"
            android:textColor="#000000"
            android:visibility="invisible"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp">

            <ImageView
                android:id="@+id/badge01"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:visibility="invisible"
                android:src="@drawable/badge01"></ImageView>

            <ImageView
                android:id="@+id/badge02"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:visibility="invisible"
                android:src="@drawable/badge02"></ImageView>

            <ImageView
                android:id="@+id/badge03"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:visibility="invisible"
                android:src="@drawable/badge03"></ImageView>

        </LinearLayout>

        <ImageView
            android:id="@+id/polarbear"
            android:layout_width="350dp"
            android:layout_height="300dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/adult_polarbear">

        </ImageView>

        <LinearLayout
            android:layout_width="310dp"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/btn_apple"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/apple"
                    android:onClick="itemOnClick">
                </ImageView>

                <TextView
                    android:id="@+id/num_apple"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/maplestory"
                    android:text="x 100"
                    android:textColor="#000000"
                    android:textSize="18dp"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                >

                <ImageView
                    android:id="@+id/btn_fish"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:src="@drawable/fish"
                    android:onClick="itemOnClick">
                </ImageView>

                <TextView
                    android:id="@+id/num_fish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="x 100"
                    android:fontFamily="@font/maplestory"
                    android:textColor="#000000"
                    android:textSize="18dp">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/btn_meat"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/meat"
                    android:onClick="itemOnClick">
                </ImageView>

                <TextView
                    android:id="@+id/num_meat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="x 100"
                    android:fontFamily="@font/maplestory"
                    android:textColor="#000000"
                    android:textSize="18dp">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/btn_ice"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ice"
                    android:onClick="itemOnClick">
                </ImageView>

                <TextView
                    android:id="@+id/num_ice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="x 100"
                    android:fontFamily="@font/maplestory"
                    android:textColor="#000000"
                    android:textSize="18dp">
                </TextView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp">

            <TextView
                android:id="@+id/level"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="레벨 100"
                android:fontFamily="@font/maplestory"
                android:textColor="#000000"
                android:textSize="18dp">

            </TextView>

            <ProgressBar
                android:id="@+id/exp_bar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_marginLeft="10dp"
                android:layout_width="300dp"
                android:layout_height="15dp"
                android:progressDrawable="@drawable/progressbar" />


        </LinearLayout>

    </LinearLayout>


    <include
        layout="@layout/navigation_drawer" />



</android.support.v4.widget.DrawerLayout>