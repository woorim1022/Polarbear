<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F0FCFC"
    android:id="@+id/signup_layout">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/maplestory"
                android:text="환영합니다"
                android:textColor="#000000"
                android:textSize="25dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"></TextView>
        </android.support.constraint.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_alignBottom="@id/ranking_top"
            tools:context=".RankingActivity">

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical">


                <EditText
                    android:id="@+id/et_id"
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="110dp"
                    android:layout_marginTop="200dp"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:ems="10"
                    android:hint="아이디"
                    android:inputType="textPersonName"
                    android:textColor="#000000"
                    android:textColorHighlight="#AEDDEF"
                    android:textColorHint="#BFD3D1"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="110dp"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:ems="10"
                    android:hint="이름"
                    android:inputType="textPersonName"
                    android:textColor="#000000"
                    android:textColorHighlight="#AEDDEF"
                    android:textColorHint="#BFD3D1"
                    app:layout_constraintEnd_toEndOf="@+id/et_id"
                    app:layout_constraintStart_toStartOf="@+id/et_id"
                    app:layout_constraintTop_toBottomOf="@+id/et_id" />

                <Button
                    android:id="@+id/btn_register"
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="110dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:background="#4DAEDDEF"
                    android:enabled="false"
                    android:fontFamily="@font/maplestory"
                    android:text="시작하기"
                    android:textColor="#4D000000"
                    android:textSize="20dp" />

            </LinearLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_weight="2">

                <Button
                    android:id="@+id/validateButton"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="200dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:text="중복확인"
                    android:background="#AEDDEF"
                    android:fontFamily="@font/maplestory"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </android.support.constraint.ConstraintLayout>


        </LinearLayout>



    </LinearLayout>


</android.support.v4.widget.DrawerLayout>