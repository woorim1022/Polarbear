<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F0FCFC"
    android:id="@+id/mypage_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MypageActivity">

        <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/mypage_top"
            tools:context=".MypageActivity">

        <ImageView
            android:id="@+id/menu_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:onClick="OnClick"
            android:src="@drawable/menu"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView"
            app:layout_constraintTop_toTopOf="parent"></ImageView>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="160dp"
            android:layout_marginRight="82dp"
            android:fontFamily="@font/maplestory"
            android:text="마이페이지"
            android:textColor="#000000"
            android:textSize="25dp"
            app:layout_constraintEnd_toStartOf="@+id/menu_button"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        </TextView>
    </android.support.constraint.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="234dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_nickname"
                app:layout_constraintRight_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="100dp"
                android:fontFamily="@font/maplestory"
                android:gravity="center_horizontal"
                android:text="닉네임"
                android:textSize="25dp"
                android:textColor="#000000" />

            <Button
                android:id="@+id/bt_modify"
                app:layout_constraintRight_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:background="#AEDDEF"
                android:textColor="#000000"
                android:fontFamily="@font/maplestory"
                android:text="변경"
                android:textSize="25dp"
                android:onClick = "onClick" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/button_round"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/maplestory"
                android:gravity="center_horizontal"
                android:text="내가 구매한 상품 목록"
                android:textSize="35dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="195dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/mypage_image1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/apple"></ImageView>

                <TextView
                    android:id="@+id/applenum"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="60dp"
                    android:fontFamily="@font/maplestory"
                    android:gravity="center_horizontal"
                    android:text="200"
                    android:textColor="#000000"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/apple_num"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="59dp"
                    android:layout_toRightOf="@id/applenum"
                    android:fontFamily="@font/maplestory"
                    android:text="개"
                    android:textColor="#000000"
                    android:textSize="25dp"></TextView>

                <ImageView
                    android:id="@+id/mypage_image2"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="35dp"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/fish"></ImageView>

                <TextView
                    android:id="@+id/fishnum"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="60dp"
                    android:fontFamily="@font/maplestory"
                    android:gravity="center_horizontal"
                    android:text="200"
                    android:textColor="#000000"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/fish_num"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="59dp"
                    android:layout_toRightOf="@id/applenum"
                    android:fontFamily="@font/maplestory"
                    android:text="개"
                    android:textColor="#000000"
                    android:textSize="25dp"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                android:id="@+id/mypage_image3"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/meat">
                </ImageView>
                <TextView
                    android:id="@+id/meatnum"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="35dp"
                    android:fontFamily="@font/maplestory"
                    android:gravity="center_horizontal"
                    android:text="200"
                    android:textColor="#000000"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/meat_num"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="36dp"
                    android:fontFamily="@font/maplestory"
                    android:text="개"
                    android:textColor="#000000"
                    android:textSize="25dp">
                </TextView>

                <ImageView
                    android:id="@+id/mypage_image4"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/ice">
                </ImageView>
                <TextView
                    android:id="@+id/icenum"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="35dp"
                    android:fontFamily="@font/maplestory"
                    android:gravity="center_horizontal"
                    android:text="200"
                    android:textColor="#000000"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/ice_num"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="36dp"
                    android:fontFamily="@font/maplestory"
                    android:text="개"
                    android:textColor="#000000"
                    android:textSize="25dp">
                </TextView>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>



    <include
        layout="@layout/navigation_drawer" />



</android.support.v4.widget.DrawerLayout>
