                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="21dp"
                    android:layout_marginLeft="50dp"
                    android:fontFamily="@font/maplestory"
                    android:text="200"
